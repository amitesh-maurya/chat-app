# ==============================================
# CHATAPP ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and update the values
# ==============================================

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# For development (SQLite)
DATABASE_URL="file:./dev.db"
# For production (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/chatapp"

# ==============================================
# AUTHENTICATION
# ==============================================
# JWT Secret Key (REQUIRED)
# Generate a secure random string for production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ==============================================
# API SERVER CONFIGURATION
# ==============================================
# Backend API server port
API_PORT=3001

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# ==============================================
# WEBSOCKET SERVER CONFIGURATION
# ==============================================
# WebSocket server port
WS_PORT=3002

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Directory for file uploads (relative to backend app)
UPLOAD_DIR="uploads"

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Allowed image file types
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Allowed audio file types for voice messages
ALLOWED_AUDIO_TYPES="audio/webm,audio/wav,audio/mp3,audio/ogg"

# ==============================================
# REDIS CONFIGURATION (OPTIONAL)
# ==============================================
# Redis URL for scaling WebSocket connections (optional)
# REDIS_URL="redis://localhost:6379"

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Node environment
NODE_ENV="development"

# Enable debug logging
DEBUG="true"

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# Next.js API URL (used by frontend)
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Next.js WebSocket URL (used by frontend)
NEXT_PUBLIC_WS_URL="ws://localhost:3002"

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# Session secret for additional security
SESSION_SECRET="your-session-secret-key-change-this"

# ==============================================
# PRODUCTION DEPLOYMENT NOTES
# ==============================================
# For production deployment:
# 1. Change all "localhost" URLs to your actual domain
# 2. Use PostgreSQL instead of SQLite
# 3. Generate secure random strings for all secrets
# 4. Set NODE_ENV to "production"
# 5. Configure proper CORS origins
# 6. Set up SSL certificates for HTTPS/WSS
# ==============================================